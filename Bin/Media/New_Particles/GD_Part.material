material GD_FlarePointSprite
{
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			depth_write off

			point_sprites on
			point_size 2
			point_size_attenuation on
			fog_override true none

			texture_unit
			{
				texture GD_flare.png
			}
		}
	}
}
