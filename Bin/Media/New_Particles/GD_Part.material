// ------------------------------------------ GD_Smoke22
material GD_Smoke22
{
    technique
    {
         pass
         {
			lighting off
			scene_blend colour_blend
			depth_write off
			diffuse vertexcolor
			fog_override true none
			
             texture_unit
             {
                 texture GD_smoke.png
				 tex_address_mode clamp
             }
         }
    }
}

